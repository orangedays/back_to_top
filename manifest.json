{
  "name": "Back To Top",
  "version": "1.0",
  "description": "add a sticky back-to-top button on website",
  "permissions": ["activeTab", "declarativeContent", "http://*/", "https://*/"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "32": "favicon.png"
    }
  },
  "icons": {
    "32": "favicon.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": ["favicon.png"]
}
